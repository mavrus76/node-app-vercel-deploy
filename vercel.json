{
  "version": 2,
  "name": "node-app-vercel-deploy",
  "public": true,
  "builds": [
    {
      "src": "./index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["views/**", "public/clock.png"]
      }
    },
    {
      "src": "public/main.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "./index.js"
    },
    {
      "src": "public/clock.png",
      "headers": { "Cache-Control": "public, max-age=3600" },
      "continue": true
    }
  ]
}

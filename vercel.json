{
  "version": 2,
  "name": "node-app-vercel-deploy",
  "public": true,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["views/**"]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/(.+\\.[a-z]+)$",
      "dest": "/$1"
    }
  ]
}
